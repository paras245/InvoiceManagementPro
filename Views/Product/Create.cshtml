@model InvoiceManagementPro.Models.Product

<h1>Add Product</h1>


@using (Html.BeginForm())
{
    <div class="form-group">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductUnit">Product Unit:</label>
        <input asp-for="ProductUnit" class="form-control" />
        <span asp-validation-for="ProductUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductRate">Product Rate:</label>
        <input asp-for="ProductRate" class="form-control" />
        <span asp-validation-for="ProductRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductDescription">Product Description:</label>
        <input asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-success" href="@Url.Action("Index")">Back to List</a>
    </div>

    
}

