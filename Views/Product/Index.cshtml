@model List<InvoiceManagementPro.Models.Product>

<div class="row">
    <div class="col">
        <h1 style="white-space:nowrap">Product List</h1>
    </div>
    <div class="col text-right myCustomFlexClass" style="display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: row;">
        <a class="btn btn-success" href="@Url.Action("Create")">Create New</a>
        <form method="post" asp-controller="Product" asp-action="Export">
            @* <button class="btn-dark" type="submit" value="Export" /> *@
            <a class="btn btn-danger" href="@Url.Action("Export")">Export As Excel</a>
        </form>
    </div>
</div>


<table class="table table-striped border-1" id="Product">
    <thead>
        <tr>
           @* <th>Product ID</th>*@
            <th>Product Name</th>
            <th>Product Unit</th>
            <th>Product Rate</th>
            <th>Product Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                @*<td>@product.ProductId</td>*@
                <td>@product.ProductName</td>
                <td>@product.ProductUnit</td>
                <td>@product.ProductRate</td>
                <td>@product.ProductDescription</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", new { id = product.ProductId })">Details</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = product.ProductId })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>





@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#Product').DataTable();
        });
    </script>
}
