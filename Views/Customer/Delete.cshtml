@model InvoiceManagementPro.Models.Customer

<h1>Delete Customer</h1>

<div>
    <hr />
    @*<h4>Customer ID: @Model.CustomerId</h4>*@
    <dl class="row">
        <dt class="col-sm-2">Customer Name:</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Customer Detail:</dt>
        <dd class="col-sm-10">@Model.CustomerDetail</dd>

        <dt class="col-sm-2">Customer City:</dt>
        <dd class="col-sm-10">@Model.CustomerCity</dd>

        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Account Number:</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>


    </dl>
    <p>Are you sure you want to delete this customer?</p>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Index">No, Cancel</a>
        <form asp-action="Delete" asp-route-id="@Model.CustomerId" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
    </div>
</div>
