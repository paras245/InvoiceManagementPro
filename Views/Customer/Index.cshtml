@model List<InvoiceManagementPro.Models.Customer>



<div class="row">
    <div class="col">
        <h1 style="white-space:nowrap">Customer List</h1>
    </div>
    <div class="col text-right" style="display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: row;">
        <a class="btn btn-success" href="@Url.Action("Create")">Create New</a>
        <form method="post" asp-controller="Customer" asp-action="Export">
            @* <button class="btn-dark" type="submit" value="Export" /> *@
            <a class="btn btn-danger" href="@Url.Action("Export")">Export As Excel</a>
        </form>
    </div>
</div>

<table class="table table-striped border-1" id="Customer">
    <thead>
        <tr>
          @*  <th>Customer ID</th>*@
            <th>Customer Name</th>
            <th>Customer Detail</th>
            <th>Customer City</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
               @* <td>@customer.CustomerId</td>*@
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerDetail</td>
                <td>@customer.CustomerCity</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", new { id = customer.CustomerId })">Details</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = customer.CustomerId })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = customer.CustomerId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#Customer').DataTable();
        });
    </script>
}
